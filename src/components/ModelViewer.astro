---
const { src, alt = "3D model", autoRotate = true, cameraControls = true, style = "width: 100%; height: 500px;" } = Astro.props;
---

<!-- Incluye el script de model-viewer si no estÃ¡ incluido globalmente -->
<script type="module" src="https://cdn.jsdelivr.net/npm/@google/model-viewer/dist/model-viewer.min.js"></script>

<model-viewer
  src={src}
  alt={alt}
  auto-rotate={autoRotate ? "true" : "false"}
  camera-controls={cameraControls ? "true" : "false"}
  style={style}
>
</model-viewer>